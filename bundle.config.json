{
  "outputDir": "summarized_files",

  "bundles": [
    {
      "bundleName": "contracts_bundle",
      "patterns": ["contracts/**/*.tz", "contracts/**/*.json"]
    },
    
    {
      "bundleName": "explore_bundle",
      "patterns": [
        "src/hooks/useConsent.js", 
        "src/pages/contracts/[addr].jsx",
        "src/pages/explore/[[...filter]].jsx",
        "src/pages/search.jsx",
        "src/pages/largeview/[addr]/[tokenId].jsx",
        "src/ui/CollectionCard.jsx",
        "src/ui/ContractMetaPanelContracts.jsx",
        "src/ui/TokenCard.jsx",
        "src/ui/ExploreNav.jsx",
        "src/utils/countOwners.js",
        "src/utils/formatAddress.js",
        "src/utils/hazards.js",
        "src/constants/mimeTypes.js",
        "src/utils/RenderMedia.jsx",
        "src/deployTarget.js",
        "src/constants/integrityBadges.js",
        "src/utils/onChainValidator.js",
        "src/utils/listLiveTokenIds.js",
        "src/ui/ContractMetaPanel.jsx",
        "src/ui/TokenMetaPanel.jsx"
      ]
    },

    {
      "bundleName": "assets_bundle",
      "patterns": [
        "public/**",
        "!public/**/*.{png,jpg,jpeg,gif,ttf,woff,woff2,svg}",
        "public/manifest*.json",
        "public/sw.js",
        "public/fonts/**"
      ]
    },

    {
      "bundleName": "engine_bundle",
      "patterns": [
        "scripts/**",
        "src/core/**",
        "src/lib/**",
        "src/data/**",
        "src/config/**",
        "src/constants/**",
        "src/workers/**",
        "src/utils/RenderMedia.jsx",
        "src/core/validator.js"
      ]
    },

    {
      "bundleName": "frontend_bundle",
      "patterns": [
        "src/contexts/**",
        "src/ui/**",
        "src/ui/Entrypoints/**",
        "src/hooks/**",
        "src/styles/**",
        "src/pages/**",
        "src/utils/**"
      ]
    },

    {
      "bundleName": "infra_bundle",
      "patterns": [
        "next.config.js",
        "package.json",
        "tsconfig.json",
        "bundle.config.json",
        ".yarnrc.yml",
        ".prettierrc",
        ".eslintrc.cjs",
        ".gitignore"
      ]
    },

    {
      "bundleName": "master_bundle",
      "patterns": [
        "contracts/**/*.tz",
        "contracts/**/*.json",

        "public/**",
        "!public/**/*.{png,jpg,jpeg,gif,ttf,woff,woff2,svg}",
        "public/manifest*.json",
        "public/sw.js",
        "public/fonts/**",

        "scripts/**",
        "src/core/**",
        "src/lib/**",
        "src/data/**",
        "src/config/**",
        "src/constants/**",
        "src/workers/**",
        "src/utils/RenderMedia.jsx",
        "src/core/validator.js",

        "src/contexts/**",
        "src/ui/**",
        "src/ui/Entrypoints/**",
        "src/hooks/**",
        "src/styles/**",
        "src/pages/**",
        "src/utils/**",

        "next.config.js",
        "package.json",
        "tsconfig.json",
        "bundle.config.json",
        ".yarnrc.yml",
        ".prettierrc",
        ".eslintrc.cjs",
        ".gitignore",

        "!node_modules/**",
        "!summarized_files/**",
        "!**/*.map"
      ]
    }
  ]
}
