{
  "outputDir": "summarized_files",

  "bundles": [
    {
      "bundleName": "contracts_bundle",
      "patterns": ["contracts/**/*.tz", "contracts/**/*.json"]
    },

    {
      "bundleName": "assets_bundle",
      "patterns": [
        "public/**",
        "!public/**/*.{png,jpg,jpeg,gif,ttf,woff,woff2,svg}",
        "public/manifest*.json",
        "public/sw.js",
        "public/fonts/**"
      ]
    },

    {
      "bundleName": "engine_bundle",
      "patterns": [
        "scripts/**",
        "src/core/**",
        "src/lib/**",
        "src/data/**",
        "src/config/**",
        "src/constants/**",
        "src/workers/**",
        "src/utils/RenderMedia.jsx",
        "src/core/validator.js"
      ]
    },

    {
      "bundleName": "frontend_bundle",
      "patterns": [
        "src/contexts/**",
        "src/ui/**",
        "src/ui/Entrypoints/**",
        "src/hooks/**",
        "src/styles/**",
        "src/pages/**",
        "src/utils/**"
      ]
    },

    {
      "bundleName": "infra_bundle",
      "patterns": [
        "next.config.js",
        "package.json",
        "tsconfig.json",
        "bundle.config.json",
        ".yarnrc.yml",
        ".prettierrc",
        ".eslintrc.cjs",
        ".gitignore"
      ]
    },

    {
      "bundleName": "master_bundle",
      "patterns": [
        "contracts/**/*.tz",
        "contracts/**/*.json",

        "public/**",
        "!public/**/*.{png,jpg,jpeg,gif,ttf,woff,woff2,svg}",
        "public/manifest*.json",
        "public/sw.js",
        "public/fonts/**",

        "scripts/**",
        "src/core/**",
        "src/lib/**",
        "src/data/**",
        "src/config/**",
        "src/constants/**",
        "src/workers/**",
        "src/utils/RenderMedia.jsx",
        "src/core/validator.js",

        "src/contexts/**",
        "src/ui/**",
        "src/ui/Entrypoints/**",
        "src/hooks/**",
        "src/styles/**",
        "src/pages/**",
        "src/utils/**",

        "next.config.js",
        "package.json",
        "tsconfig.json",
        "bundle.config.json",
        ".yarnrc.yml",
        ".prettierrc",
        ".eslintrc.cjs",
        ".gitignore",

        "!node_modules/**",
        "!summarized_files/**",
        "!**/*.map"
      ]
    }
  ]
}
