{
  "outputDir": "summarized_files",

  "bundles": [
    {
      "bundleName": "contracts_bundle",
      "patterns": ["contracts/**/*.tz", "contracts/**/*.json"]
    },
    {
      "bundleName": "repairuri_bundle",
      "patterns": [
        "src/ui/Entrypoints/RepairUri.jsx",
        "src/core/batch.js",
        "src/utils/sliceCache.js",
        "src/hooks/useTxEstimate.js",
        "src/core/feeEstimator.js",
        "src/utils/uriHelpers.js",
        "src/core/net.js",
        "src/ui/OperationOverlay.jsx",
        "src/ui/GlobalSnackbar.jsx"
      ]
    },

    {
      "bundleName": "explore_bundle",
      "patterns": [
        "src/hooks/useConsent.js", 
        "src/pages/contracts/**/*.jsx",
        "src/pages/explore/**/*.jsx",
        "src/pages/search.jsx",
        "src/pages/largeview/**/*.jsx",
        "src/ui/CollectionCard.jsx",
        "src/ui/ContractMetaPanelContracts.jsx",
        "src/ui/TokenIdSelect.jsx",
        "src/ui/TokenCard.jsx",
        "src/ui/FullScreenModal.jsx",
        "src/utils/pixelUpscale.js",
        "srce/ui/MakeOfferBtn.jsx",
        "src/ui/MakeOfferDialog.jsx",
        "src/ui/FiltersPanel.jsx",
        "src/utils/decodeHexFields.js",
        "src/ui/ExploreNav.jsx",
        "src/utils/countOwners.js",
        "src/utils/formatAddress.js",
        "src/utils/hazards.js",
        "src/ui/EnableScripts.jsx",
        "src/constants/mimeTypes.js",
        "src/utils/RenderMedia.jsx",
        "src/deployTarget.js",
        "src/constants/integrityBadges.js",
        "src/utils/onChainValidator.js",
        "src/utils/listLiveTokenIds.js",
        "src/config/**/*.js",
        "src/data/**/*.json",
        "src/utils/countAmount.js",
        "src/ui/layout.jsx",
        "src/pages/_app.js",
        "src/ui/BuyDialog.jsx",
        "src/ui/ListTokenDialog.jsx",
        "src/ui/MarketplaceBar.jsx",
        "src/core/marketplace.js",
        "src/ui/GlobalSnackbar.jsx",
        "src/ui/MAINTokenMetaPanel.jsx"
      ]
    },
    
    {
      "bundleName": "render_media_bundle",
      "patterns": [
        "src/constants/mimeTypes.js",
        "src/utils/RenderMedia.jsx",
        "src/utils/uriHelpers.js",
        "src/ui/Entrypoints/MintUpload.jsx",
        "src/ui/Entrypoints/MintPreview.jsx",
        "src/ui/AdminTools.jsx",
        "src/ui/CollectionCard.jsx",
        "src/ui/ContractMetaPanel.jsx",
        "src/ui/ContractMetaPanelContracts.jsx",
        "src/ui/TokenCard.jsx",
        "src/ui/TokenMetaPanel.jsx",
        "src/ui/MAINTokenMetaPanel.jsx",
        "src/ui/TokenIdSelect.jsx",
        "src/utils/decodeHexFields.js",
        "src/utils/formatAddress.js",
        "src/utils/hazards.js",
        "src/ui/EnableScripts.jsx",
        "src/utils/listLiveTokenIds.js",
        "src/utils/onChainValidator.js",
        "src/utils/uriHelpers.js",
        "src/utils/countOwners.js",
        "src/utils/countTokens.js",
        "src/utils/countAmount.js",
        "src/utils/countAmount.js",
        "src/utils/pixelUpscale.js",
        "src/utils/FullscreenModal.jsx"
      ]
    },

    {
      "bundleName": "assets_bundle",
      "patterns": [
        "public/**",
        "!public/**/*.{png,jpg,jpeg,gif,ttf,woff,woff2,svg,psd,svg}",
        "public/manifest*.json",
        "public/sw.js",
        "!public/fonts/**"
      ]
    },

    {
      "bundleName": "engine_bundle",
      "patterns": [
        "scripts/**",
        "src/core/**",
        "src/lib/**",
        "src/data/**",
        "src/config/**",
        "src/constants/**",
        "src/workers/**",
        "src/utils/RenderMedia.jsx",
        "src/core/validator.js"
      ]
    },

    {
      "bundleName": "frontend_bundle",
      "patterns": [
        "src/contexts/**",
        "src/ui/**",
        "src/ui/Entrypoints/**",
        "src/hooks/**",
        "src/styles/**",
        "src/pages/**",
        "src/utils/**"
      ]
    },

    {
      "bundleName": "infra_bundle",
      "patterns": [
        "next.config.js",
        "package.json",
        "tsconfig.json",
        "bundle.config.json",
        ".yarnrc.yml",
        ".prettierrc",
        ".eslintrc.cjs",
        ".gitignore"
      ]
    }
  ]
}
